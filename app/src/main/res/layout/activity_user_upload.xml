<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="matrix.weathernow.UserUpload">


    <RadioGroup
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_width="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/weather">

        <RadioButton
            android:text="Sunny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunny"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/rainy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rain"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/aboutTorain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="1dp"
            android:text="AboutToRain"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />
    </RadioGroup>

    <TextView
        android:text="Weather Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherType"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:text="Cloud Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weatherType"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:id="@+id/cloudType"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="normal|bold" />

    <RadioGroup
        android:layout_width="110dp"
        android:layout_height="100dp"

        android:layout_marginLeft="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"

        android:layout_alignTop="@+id/radioGroup4"
        android:layout_alignRight="@+id/cloudType"
        android:layout_alignEnd="@+id/cloudType"
        android:id="@+id/cloud">

        <RadioButton
            android:text="Cloudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cloudy"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/moderate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Moderate"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/noClouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NoClouds"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />
    </RadioGroup>

    <TextView
        android:text="Wind Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windType"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/windType"
        android:layout_centerHorizontal="true"
        android:id="@+id/wind">

        <RadioButton
            android:text="Heavy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heavy"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <RadioButton
            android:text="Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/normal"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <RadioButton
            android:text="None"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/none"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />
    </RadioGroup>

    <Button
        android:text="update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/radioGroup6"
        android:layout_alignStart="@+id/radioGroup6"
        android:id="@+id/update"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />
</RelativeLayout>

