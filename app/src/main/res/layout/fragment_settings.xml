<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matrix.weathernow.Settings">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@android:color/background_light">


        <Button
            android:text="contact us"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/sendMail"
            android:layout_marginBottom="178dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold"
            android:background="@android:color/holo_red_dark"
            android:textColor="@android:color/background_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Weather Now" />

        <TextView
            android:text="Is a free crowdsourcing weather application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView11"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <TextView
            android:text="produced by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView12"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Team Matrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView13"
            android:textSize="19sp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:text="University of Moratuwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView14"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Sri Lanka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView15"
            android:textSize="18sp"
            android:textStyle="normal|bold" />
    </RelativeLayout>


</FrameLayout>
